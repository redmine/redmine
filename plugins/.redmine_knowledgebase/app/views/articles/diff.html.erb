<h1><%= @article.title %></h1>

<p>
<%= l(:label_version) %> <%= link_to @diff.content_from.version, :action => 'version', :id => @articleversion.kb_article_id, :project_id => @project, :version => @diff.content_from.version %>
<em>(<%= @diff.content_from.updater ?
             link_to_user(@diff.content_to.updater.name) : link_to_user(@diff.content_to.author.name)
      %>, <%= format_time(@diff.content_from.updated_at) %>)</em>
&#8594;
<%= l(:label_version) %> <%= link_to @diff.content_to.version, :action => 'version',
                             :id => @articleversion.kb_article_id, :project_id => @project,
                             :version => @diff.content_to.version
                          %>/<%= @article.version %>
<em>(<%= @diff.content_to.updater ?
             link_to_user(@diff.content_to.updater.name) : link_to_user(@diff.content_to.author.name)
      %>, <%= format_time(@diff.content_to.updated_at) %>)</em>
</p>

<div class="text-diff">
<%= simple_format_without_paragraph @diff.to_html %>
</div>