replaceIssueFormWith('<%= escape_javascript(render :partial => 'form') %>');
<% if User.current.allowed_to?(:log_time, @issue.project) %>
  $('#log_time').show();
<% else %>
  $('#log_time').hide();
<% end %>

<% if @issue.notes_addable? %>
  $('#add_notes').show();
  $('#add_attachments').show();
<% else %>
  $('#add_notes').hide();
  $('#add_attachments').hide();
<% end %>